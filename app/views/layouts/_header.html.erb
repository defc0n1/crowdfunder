<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <% if current_page? root_path %>
        <%= link_to 'CrowdFunder', '#', class: "brand" %>
      <% else %>
        <%= link_to 'CrowdFunder', root_path, class: "brand" %>
      <% end %>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="<%= 'active' if current_page? root_path %>">
            <%= link_to 'Home', :root %>
          </li>
          <li class="<%= 'active' if (current_page? projects_path(@project)) || (current_page? project_path(@project)) %>">
            <%= link_to 'Projects', :projects %>
          </li>          
          <% if logged_in? %>
            <li>
              <%= link_to 'Log Out', logout_path, method: :delete %>
            </li>
          <% else %>
            <li class="<%= 'active' if (current_page? new_user_path) %>">
              <%= link_to 'Sign up', :new_user %>
            </li>
            <li class="<%= 'active' if (current_page? new_session_path) %>">
              <%= link_to 'Log in', :new_session %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>