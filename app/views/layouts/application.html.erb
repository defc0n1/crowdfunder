<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<%= render "layouts/header" %>

		<% flash.each do |type, msg| %>
			<div class="<%= type %>">
			  <%= msg %>
			</div>
		<% end %>

		<%= yield %>
	</div>
</body>
</html>
